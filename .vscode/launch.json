{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
        },
        {
            "name": "Listen for XDebug Ubuntu VM",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/media/sf_gotas/": "${workspaceFolder}",
            },
            "log": true,
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
